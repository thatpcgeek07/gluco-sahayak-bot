cron.schedule('0 8 * * *', async () => {
  const patients = await Patient.find({ 
    'reminderPreferences.medication': true,
    onboarding_completed: true 
  });
  
  for (const p of patients) {
    const greeting = p.language_pref === 'hi' ? 'ğŸŒ… Namaste' : 
                     p.language_pref === 'kn' ? 'ğŸŒ… Namaskara' : 'ğŸŒ… Good morning';
    await sendWhatsAppMessage(p.phone, `${greeting} ${p.full_name}! Meds & glucose check ğŸ˜Š`);
  }
});

cron.schedule('0 20 * * *', async () => {
  const patients = await Patient.find({ 
    'reminderPreferences.glucoseLogging': true,
    onboarding_completed: true 
  });
  
  for (const p of patients) {
    const today = await GlucoseReading.findOne({
      patientPhone: p.phone,
      timestamp: { $gte: new Date().setHours(0,0,0,0) }
    });
    
    if (!today) {
      const reminder = p.language_pref === 'hi' ? 'ğŸŒ™ Glucose log karein!' :
                       p.language_pref === 'kn' ? 'ğŸŒ™ Glucose log maadi!' : 'ğŸŒ™ Log glucose!';
      await sendWhatsAppMessage(p.phone, reminder);
    }
  }
});

